{
    "name": "@eslint/create-config",
    "version": "0.4.2",
    "description": "Utility to create ESLint config files.",
    "keywords": [
        "ast",
        "lint",
        "javascript",
        "ecmascript",
        "espree"
    ],
    "homepage": "https://eslint.org",
    "bugs": "https://github.com/eslint/create-config/issues/",
    "repository": "eslint/create-config",
    "funding": "https://opencollective.com/eslint",
    "license": "MIT",
    "author": "Nicholas C. Zakas <nicholas+npm@nczconsulting.com>",
    "type": "module",
    "bin": {
        "create-config": "./bin/create-config.js"
    },
    "files": [
        "LICENSE",
        "README.md",
        "bin",
        "lib"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "eslint .",
        "test": "mocha \"tests/init/**/*.js\"",
        "test:cov": "c8 npm test",
        "generate-alpharelease": "eslint-generate-prerelease alpha",
        "generate-betarelease": "eslint-generate-prerelease beta",
        "generate-rcrelease": "eslint-generate-prerelease rc",
        "generate-release": "eslint-generate-release",
        "publish-release": "eslint-publish-release"
    },
    "mocha": {
        "loader": "esmock",
        "ui": "bdd",
        "timeout": 10000
    },
    "dependencies": {
        "@eslint/eslintrc": "^1.0.3",
        "cross-spawn": "^7.0.2",
        "debug": "^4.0.1",
        "enquirer": "^2.3.5",
        "js-yaml": "^4.1.0",
        "json-stable-stringify-without-jsonify": "^1.0.1",
        "mri": "^1.2.0",
        "semver": "^7.2.1"
    },
    "devDependencies": {
        "c8": "^7.10.0",
        "chai": "^4.3.4",
        "eslint": "^8.2.0",
        "eslint-config-eslint": "^7.0.0",
        "eslint-plugin-jsdoc": "^37.0.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-release": "^3.2.0",
        "esmock": "^1.8.8",
        "espree": "^9.0.0",
        "lint-staged": "^12.1.2",
        "memfs": "^3.4.0",
        "mocha": "^9.1.3",
        "shelljs": "^0.8.4",
        "sinon": "^12.0.1",
        "yorkie": "^2.0.0"
    },
    "engines": {
        "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
    },
    "lint-staged": {
        "*.js": "eslint --fix"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    }
}
