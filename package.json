{
  "name": "@eslint/create-config",
  "version": "2.0.0",
  "description": "Utility to create ESLint config files.",
  "keywords": [
    "ast",
    "lint",
    "javascript",
    "ecmascript",
    "espree"
  ],
  "homepage": "https://eslint.org",
  "bugs": "https://github.com/eslint/create-config/issues/",
  "repository": "eslint/create-config",
  "funding": "https://opencollective.com/eslint",
  "license": "MIT",
  "author": "Nicholas C. Zakas <nicholas+npm@nczconsulting.com>",
  "type": "module",
  "bin": {
    "create-config": "./bin/create-config.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "test": "vitest run --coverage",
    "test:snapshots": "vitest run snapshots",
    "test:snapshots:update": "vitest -u run snapshots"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "cross-spawn": "^7.0.2",
    "enquirer": "^2.3.5",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-eslint": "^13.0.0",
    "lint-staged": "^16.2.7",
    "memfs": "^4.0.0",
    "prettier": "3.8.1",
    "sinon": "^21.0.0",
    "vitest": "^4.0.18",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": "^20.19.0 || ^22.13.0 || >=24"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.js)": "prettier --write --ignore-unknown"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}
